<%- include('../includes/head.ejs') %>

<body>
    <div class="p-3 mb-2 bg-success text-white"></div>

    <div class="container" style="width: 50%; margin: 0 auto;">
        <div class="card mb-3" style="width: 24rem;">
            <div class="card-body">
                <h1 class="card-title"><%= article.title %></h1>

                <h6 class="card-subtitle mb-2 text-muted"><%= article.createdAt.toLocaleDateString() %></h6>

                <div class="mb-4"><%= article.content %></div>

                
                <a href="/articles/comment/<%= article.id %>" type="button" class="btn btn-primary">comment</a>

                <% article.comment.forEach(text => { %>   
                    <div class="card-body"><%= text["text"] %></div>
                <% }) %>

                <div><%= article.like %></div>                

                <form action="/articles/<%= article.id %>" method="POST">
                    <input hidden name="like" value="<%= article.like %>" />

                    <button type="submit" class="btn">
                        <i class="far fa-thumbs-up  fa-lg"></i> 
                    </button>
                </form>

                <a href="/" type="button" class="btn btn-info mt-4">All Articles</a>
            
                <a href="/articles/edit/<%= article.id %>" type="button" class="btn btn-warning mt-4">Edit</a>
            </div>
        </div>
    </div>

<%- include('../includes/end.ejs') %>  